generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id             String     @id @default(uuid())
  name           String
  prompt         String
  style          String
  outputWidth    Int
  outputHeight   Int
  targetDuration Int?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  assets         Asset[]
  jobs           Job[]
  artifacts      Artifact[]
}

model Asset {
  id          String     @id @default(uuid())
  projectId   String
  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  kind        AssetKind
  filename    String
  contentType String
  size        Int
  r2Key       String
  createdAt   DateTime   @default(now())
}

model Job {
  id          String       @id @default(uuid())
  projectId   String
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  status      JobStatus    @default(QUEUED)
  stage       String       @default("pending")
  progress    Int          @default(0)
  error       String?
  logSnippet  String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  startedAt   DateTime?
  completedAt DateTime?
  artifacts   Artifact[]
}

model Artifact {
  id          String        @id @default(uuid())
  projectId   String
  project     Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  jobId       String?
  job         Job?          @relation(fields: [jobId], references: [id], onDelete: Cascade)
  type        ArtifactType
  r2Key       String
  contentType String
  size        Int?
  createdAt   DateTime      @default(now())
}

enum AssetKind {
  VIDEO
  AUDIO
}

enum JobStatus {
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
}

enum ArtifactType {
  ANALYSIS
  EDL
  LOG
  RENDER
}
